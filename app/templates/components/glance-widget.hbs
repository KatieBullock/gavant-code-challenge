<Page::Content>
  <div class="col-lg-9">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title">
          At a Glance
        </h5>
        <h5>
          {{!-- This is the length of the returned array of customer data --}}
          {{model.length}}
        </h5>
        <p class="text-muted">
          Customers in pipeline
        </p>
        {{!-- This is looping through each model, to access the attributes. I couldn't figure out how to add up the
        budgets to get total budget --}}
        {{#each model as |customer|}}
        <h5>
          {{customer.budget}}
        </h5>
        {{/each}}
        <h5>{{this.totalBudget}}</h5>
        <p class="text-muted">
          Total forecasted budget
        </p>
      </div>
    </div>
  </div>
</Page::Content>